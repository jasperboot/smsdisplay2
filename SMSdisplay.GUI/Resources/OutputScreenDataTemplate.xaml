<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:SMSdisplay.GUI"
    xmlns:presenter="clr-namespace:SMSdisplay.GUI;assembly=SMSdisplay.Presenter">

    <DataTemplate DataType="{x:Type presenter:OutputScreen}">
        <DataTemplate.Resources>
        </DataTemplate.Resources>
        <StackPanel Name="item" Orientation="Horizontal" Height="48">
            <Grid>
            </Grid>
            <StackPanel Margin="5,0,5,0" VerticalAlignment="Center">
                <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="12" />
                <TextBlock Text="{Binding Resolution}" FontSize="12" />
                <TextBlock Text="{Binding BitsPerPixel}" FontSize="10" />
            </StackPanel>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>