<Application x:Class="SMSdisplay.GUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Import the resource dictionaries containing DataTemplates -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/SerialPortDataTemplate.xaml" />
                <ResourceDictionary Source="pack://application:,,,/SMSdisplay.Plugins;component/Resources/IPluginDataTemplate.xaml" />
                <ResourceDictionary Source="pack://application:,,,/SMSdisplay.Plugins;component/Resources/PluginThemeDataTemplate.xaml" />
                <ResourceDictionary Source="Resources/OutputScreenDataTemplate.xaml" />
                <ResourceDictionary Source="Resources/QueuedMessageDataTemplate.xaml" />
                <ResourceDictionary Source="Resources/ShownMessageDataTemplate.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
