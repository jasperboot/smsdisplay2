<Window x:Class="SMSdisplay.Plugins.Tester.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1" Height="266" Width="682" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid Height="227">
        <Button Height="23" HorizontalAlignment="Left" Margin="12,74,0,0" Name="button1" VerticalAlignment="Top" Width="75" Click="button1_Click">Insert text</Button>
        <Button Height="23" HorizontalAlignment="Left" Margin="12,16,0,0" Name="button2" VerticalAlignment="Top" Width="75" Click="button2_Click">Initialize</Button>
        <CheckBox Height="16" Margin="118,24,40,0" Name="cbCosts" VerticalAlignment="Top" Click="cbCosts_Click">Show costing info</CheckBox>
        <Button Height="23" HorizontalAlignment="Left" Margin="12,45,0,0" Name="button3" VerticalAlignment="Top" Width="75" Click="button3_Click">Show</Button>
        <Button HorizontalAlignment="Left" Margin="12,103,0,98" Name="button4" Width="75" Click="button4_Click">Hide</Button>
        <ListBox Margin="330,4,-2,2" Name="listBox1" ItemsSource="{Binding}" />
    </Grid>
</Window>
